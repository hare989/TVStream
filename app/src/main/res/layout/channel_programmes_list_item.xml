<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="45dp"
    android:background="#051838">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:id="@+id/imgEPGProgramme"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtProgrammeTitle"
        android:layout_toEndOf="@+id/imgEPGProgramme"
        android:textSize="13sp"
        android:text="Programme title"
        android:layout_marginLeft="10dp"
        android:textColor="#e9f4ff"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgEPGProgramme"
        android:layout_toStartOf="@id/txtProgrammeStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Start"
        android:id="@+id/txtProgrammeStart"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#7181a2"
        android:textSize="12sp" />
</RelativeLayout>